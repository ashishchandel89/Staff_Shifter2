<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"

    android:clipToPadding="false"
    android:clipChildren="false">



    <!-- Manage Schedule -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape5">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="130dp"
                android:src="@drawable/big_schedule"></ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape21"
                android:padding="16dp">



                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="back_button4"
                    android:background="@drawable/shape28"
                    android:src="@drawable/back4"
                    android:elevation="6dp"
                    android:padding="7dp"
                    android:scaleType="fitCenter"
                    ></ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Staff Records"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="@font/font2"
                    android:layout_marginTop="65dp"

                    android:textSize="22dp"
                    android:layout_marginLeft="126dp"
                    android:id="@+id/t1_manage"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="128dp"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:background="@drawable/shape32"
                android:id="@+id/l1"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">



            <!--Name-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/t1_name"
                android:textSize="12.5dp"
                android:fontFamily="@font/font"
                android:textColor="#84858A"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="66dp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">
              <ImageView
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:background="@drawable/shape14"
                  android:layout_marginLeft="20dp"
                  android:src="@drawable/user1">
              </ImageView>

                <EditText
                    android:id="@+id/et1_name"
                    android:layout_width="289dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/font"
                    android:padding="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape13"
                    android:textColor="#646466"
                    android:textSize="14dp"></EditText>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="67dp"

                android:layout_marginTop="2dp"
                android:background="#C9CACF"
                ></View>


            <!-- Father Name-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father's Name"
                android:id="@+id/t2_fname"
                android:textSize="12.5dp"
                android:fontFamily="@font/font"
                android:textColor="#84858A"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="66dp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape14"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/father">
                </ImageView>

                <EditText
                    android:id="@+id/et2_fname"
                    android:layout_width="289dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/font"
                    android:layout_marginTop="12dp"
                    android:padding="2dp"
                    android:background="@drawable/shape13"
                    android:textColor="#646466"
                    android:textSize="14dp"></EditText>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="67dp"
                android:layout_marginTop="2dp"
                android:background="#C9CACF"
                ></View>


            <!--password-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/t1_pass"
                android:textSize="12.5dp"
                android:fontFamily="@font/font"
                android:textColor="#84858A"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="66dp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape14"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/lock">
                </ImageView>

                <EditText
                    android:id="@+id/et3_pass"
                    android:layout_width="187dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="8dp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/font"
                    android:padding="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape13"
                    android:textColor="#646466"
                    android:textSize="14dp"></EditText>
                
                <ImageButton
                    android:layout_width="28dp"
                    android:layout_height="22dp"
                    android:src="@drawable/eye"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:onClick="f2"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/shape14"
                    ></ImageButton>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="67dp"
                android:layout_marginTop="2dp"
                android:background="#C9CACF"
                ></View>


            <!-- Email-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/t4_email"
                android:textSize="12.5dp"
                android:fontFamily="@font/font"
                android:textColor="#84858A"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="66dp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape14"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/mail">
                </ImageView>

                <EditText
                    android:id="@+id/et4_email"
                    android:layout_width="289dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/font"
                    android:padding="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape13"
                    android:textColor="#646466"
                    android:textSize="14dp"></EditText>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="67dp"
                android:layout_marginTop="2dp"
                android:background="#C9CACF"
                ></View>


            <!--Phone-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No"
                android:id="@+id/t5_phone"
                android:textSize="12.5dp"
                android:fontFamily="@font/font"
                android:textColor="#84858A"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="66dp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape14"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/phone">
                </ImageView>

                <EditText
                    android:id="@+id/et5_phone"
                    android:layout_width="289dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/font"
                    android:padding="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape13"
                    android:textColor="#646466"
                    android:textSize="14dp"></EditText>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="67dp"
                android:layout_marginTop="2dp"
                android:background="#C9CACF"
                ></View>



            <!-- D.O.B -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:id="@+id/t6_dob"
                android:textSize="12.5dp"
                android:fontFamily="@font/font"
                android:textColor="#84858A"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="66dp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape14"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/cake">
                </ImageView>

                <EditText
                    android:id="@+id/et6_dob"
                    android:layout_width="289dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="8dp"
                    android:fontFamily="@font/font"
                    android:padding="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape13"
                    android:textColor="#646466"
                    android:textSize="14dp"></EditText>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="67dp"
                android:layout_marginTop="2dp"
                android:background="#C9CACF"
                ></View>


            <!-- Gender -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:id="@+id/t7_Gender"
            android:textSize="12.5dp"
            android:fontFamily="@font/font"
            android:textColor="#84858A"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="66dp"
            ></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape14"
                android:layout_marginLeft="20dp"
                android:src="@drawable/gender">
            </ImageView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Male"
                android:textSize="12.5dp"
                android:fontFamily="@font/font"
                android:textColor="#84858A"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="30dp"
                android:drawablePadding="10dp"
                android:button="@drawable/radio"
                android:id="@+id/r1_male"
                ></RadioButton>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Female"
                    android:textSize="12.5dp"
                    android:fontFamily="@font/font"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="27dp"
                    android:drawablePadding="10dp"
                    android:button="@drawable/radio"
                    android:textColor="#84858A"
                    android:id="@+id/r2_female"
                    ></RadioButton>
            </RadioGroup>



        </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Save"
                android:layout_marginHorizontal="55dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/font2"
                android:id="@+id/b1_save"
                android:textColor="#FFFFFF"
                android:onClick="f1"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape3"></Button>
        </LinearLayout>
       <!--
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit1"
            android:background="@drawable/shape14"
            android:id="@+id/i3"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"
            android:layout_gravity="bottom|end"
            android:elevation="8dp"
            ></ImageButton>-->


    </RelativeLayout>

</LinearLayout>
</ScrollView>