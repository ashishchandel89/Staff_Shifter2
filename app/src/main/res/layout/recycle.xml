<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"

        android:clipToPadding="false"
        android:clipChildren="false">



        <!-- Staff's Attendance -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape5">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="130dp"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="130dp"
                    android:src="@drawable/attend"></ImageView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:elevation="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape21"
                    android:padding="16dp">



                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginLeft="10dp"
                        android:onClick="back_button5_2"
                        android:background="@drawable/shape28"
                        android:src="@drawable/back4"
                        android:elevation="6dp"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        ></ImageButton>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staff's Attendance"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="@font/font2"
                        android:layout_marginTop="65dp"

                        android:textSize="22dp"
                        android:layout_marginLeft="87dp"
                        android:id="@+id/t1_manage"
                        ></TextView>

                </LinearLayout>


                <!--Date-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="128dp"
                    android:layout_marginRight="10dp"
                    android:elevation="15dp"
                    android:background="@drawable/shape32"
                    android:id="@+id/l1"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/t1_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="70dp"
                            android:elevation="6dp"
                            android:fontFamily="@font/font2"
                            android:text="Date:"
                            android:textColor="#5A5B5D"
                            android:textSize="14dp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/t2_date"
                            android:textSize="13dp"
                            android:fontFamily="@font/font2"
                            android:textColor="#5A5B5D"
                            android:elevation="6dp"
                            android:layout_marginTop="70dp"
                            android:layout_marginLeft="4dp"
                            ></TextView>



                        <!--View Absent Faculty-->



                    </LinearLayout>




                    <!--Attendance-->

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/shape36"
                            android:elevation="15dp">

                            <TextView
                                android:id="@+id/t1_attendance"
                                android:layout_width="288dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="65dp"
                                android:fontFamily="@font/font2"
                                android:padding="10dp"
                                android:text="Today's Attendance"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="16dp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="27dp"

                            android:background="@drawable/shape35"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="25dp"
                                        android:layout_marginTop="60dp"
                                        android:fontFamily="@font/font2"
                                        android:text="Name"
                                        android:textColor="#414040"
                                        android:textSize="16dp"

                                        ></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="75dp"
                                        android:layout_marginTop="60dp"
                                        android:fontFamily="@font/font2"
                                        android:text="Present"
                                        android:textColor="#414040"
                                        android:textSize="16dp"

                                        ></TextView>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="60dp"
                                        android:fontFamily="@font/font2"
                                        android:text="Absent"
                                        android:textColor="#414040"
                                        android:textSize="16dp"

                                        ></TextView>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="4dp"
                                    android:background="#FD802D"
                                    android:layout_marginHorizontal="24dp"
                                    ></View>


                                <androidx.recyclerview.widget.RecyclerView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/recycle1">
                                </androidx.recyclerview.widget.RecyclerView>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="37dp"
                                    android:text="Save"
                                    android:layout_marginHorizontal="35dp"
                                    android:layout_marginTop="60dp"
                                    android:fontFamily="@font/font2"
                                    android:id="@+id/b1_save"

                                    android:textColor="#FFFFFF"
                                    android:onClick="b1_save"
                                    android:layout_marginBottom="40dp"
                                    android:background="@drawable/shape22"></Button>

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>




</LinearLayout>
</ScrollView>