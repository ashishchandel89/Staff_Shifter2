<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"

    android:clipToPadding="false"
    android:clipChildren="false">



    <!-- Manage Notice -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape5">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/logo1"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape21"
                android:padding="16dp">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="back_button5"
                    android:background="@drawable/shape28"
                    android:src="@drawable/back4"
                    android:elevation="6dp"
                    android:padding="7dp"
                    android:scaleType="fitCenter"
                    ></ImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Staff Reschedule"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="@font/font2"
                    android:layout_marginTop="65dp"

                    android:textSize="20dp"
                    android:layout_marginLeft="110dp"
                    android:id="@+id/t1_manage"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="125dp"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:background="@drawable/shape32"
                android:id="@+id/l1"
                android:layout_marginBottom="10dp"

                android:orientation="vertical">







                <!--Date-->



                <TextView
                    android:id="@+id/t1_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="70dp"
                    android:elevation="6dp"
                    android:fontFamily="@font/font"
                    android:text="Select Date"
                    android:textColor="#5A5B5D"
                    android:textSize="16dp"></TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/et1_date"
                        android:layout_width="236dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/font"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/shape13"
                        android:textColor="#646466"
                        android:textSize="14dp" />

                    <ImageButton
                        android:layout_width="22dp"
                        android:layout_height="18dp"
                        android:src="@drawable/down1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:onClick="f1_date"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/shape40"
                        ></ImageButton>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:background="#C9CACF"
                    android:layout_marginHorizontal="35dp"></View>



                <!--Day-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/t1_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:elevation="6dp"
                    android:fontFamily="@font/font"
                    android:text="Day :"
                    android:textColor="#5A5B5D"
                    android:textSize="16dp"></TextView>

                    <TextView
                        android:id="@+id/et1_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="40dp"
                        android:elevation="6dp"
                        android:fontFamily="@font/font"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#5A5B5D"
                        android:textSize="14dp"></TextView>


                </LinearLayout>
                <View
                    android:layout_width="78dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#C9CACF"
                    android:layout_marginLeft="80dp"></View>



                <!--Name-->

                <TextView
                    android:id="@+id/t1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="50dp"
                    android:elevation="6dp"
                    android:fontFamily="@font/font"
                    android:text="Select Absent Faculty Name"
                    android:textColor="#5A5B5D"
                    android:textSize="16dp"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <Spinner
                        android:layout_width="245.7dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginHorizontal="35dp"
                        android:fontFamily="@font/font"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape13"
                        android:textColor="#646466"
                        android:textSize="14dp"
                        android:id="@+id/name_spin"></Spinner>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:background="#C9CACF"
                    android:layout_marginHorizontal="35dp"></View>





                <!--Absent staff details-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/shape42"
                 android:layout_marginHorizontal="35dp"
                    >

                    <TextView
                        android:id="@+id/t1_attendance"
                        android:layout_width="288dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="63dp"
                        android:fontFamily="@font/font2"
                        android:padding="10dp"
                        android:text="Absent Staff's Lectures Details"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="9dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"

                    android:background="@drawable/shape41"
                    android:layout_marginHorizontal="35dp"

                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycle3">
                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>


                <!--Time-->


                <TextView
                    android:id="@+id/t1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="50dp"
                    android:elevation="6dp"
                    android:fontFamily="@font/font"
                    android:text="Select Lecture Rescheduling Time"
                    android:textColor="#5A5B5D"
                    android:textSize="16dp"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <Spinner
                        android:layout_width="245.7dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginHorizontal="35dp"
                        android:fontFamily="@font/font"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape13"
                        android:textColor="#646466"
                        android:textSize="14dp"
                        android:id="@+id/time_spin"></Spinner>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:background="#C9CACF"
                    android:layout_marginHorizontal="35dp"
                   ></View>


                <!--Show Staff who free at that time-->

                <Button
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:text="View Free Faculty"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/font2"
                    android:id="@+id/b1_save"
                    android:textColor="#F1ED03"
                    android:textSize="8dp"
                    android:layout_marginLeft="207dp"
                    android:onClick="free_staff"
                    android:background="@drawable/shape22"></Button>





                <!--Name-->

                <TextView
                    android:id="@+id/t1_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:elevation="6dp"
                    android:fontFamily="@font/font"
                    android:text="Select Free Faculty Name"
                    android:textColor="#5A5B5D"
                    android:textSize="16dp"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <Spinner
                        android:layout_width="245.7dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginHorizontal="35dp"
                        android:fontFamily="@font/font"
                        android:padding="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape13"
                        android:textColor="#646466"
                        android:textSize="14dp"
                        android:id="@+id/free_spin"></Spinner>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:background="#C9CACF"
                    android:layout_marginHorizontal="35dp"
                    ></View>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@drawable/whatsapp"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="40dp"
                        android:scaleType="centerInside"

                        android:padding="5dp"
                        android:onClick="whatsapp"
                        android:background="@drawable/shape9"
                        ></ImageButton>

                    <ImageButton
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@drawable/message"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="60dp"
                        android:scaleType="centerInside"
                        android:padding="9dp"
                        android:onClick="message"
                        android:background="@drawable/shape7"
                        ></ImageButton>

                    <ImageButton
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@drawable/telephone"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="60dp"
                        android:scaleType="centerInside"
                        android:padding="9dp"
                        android:onClick="call"
                        android:background="@drawable/shape9"
                        ></ImageButton>
                </LinearLayout>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="Save"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/font2"
                    android:id="@+id/b2_save"
                    android:layout_marginBottom="50dp"
                    android:textColor="#FFFFFF"
                    android:onClick="save"
                    android:background="@drawable/shape22"></Button>



            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>